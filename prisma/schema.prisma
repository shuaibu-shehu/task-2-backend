generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String   @id @unique @default(cuid())
  email     String   @unique
  firstName      String 
  lastName      String 
  password      String
  organisations     Organisation[] @relation("UserOrganisation")
  phone      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Organisation {
  orgId        String   @id @default(cuid())
  name      String
  description      String?
 
  users     User[] @relation("UserOrganisation")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}